{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build All Files",
            "command": "D:/apps/cpp/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g", // Enable debugging symbols
                "${workspaceFolder}/src/*.cpp", // Compile all .cpp files in the src folder
                "-o",
                "${workspaceFolder}/src/test.exe" // Output executable in the src folder
            ],
            "options": {
                "cwd": "${workspaceFolder}/src" // Set working directory to src folder
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiles all .cpp files in the src folder and generates test.exe."
        }
    ]
}
